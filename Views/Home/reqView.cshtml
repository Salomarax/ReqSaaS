@{
    ViewData["Title"] = "Requisitos Normativos";
    ViewData["UseSideBar"] = true; 
    var canCrud = User.HasClaim("nivel", "2") || User.HasClaim("nivel", "3");
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

<style>
    .page {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        text-align: center;
        margin: 8px 0 18px;
    }

        .page-header h2 {
            color: #2e7d32;
            margin: 0 0 6px;
            font-family: 'Inter',sans-serif;
        }

        .page-header p {
            color: #6b7280;
            margin: 0;
        }

    .filters {
        display: flex;
        gap: 10px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 16px;
    }

        .filters input, .filters select, .filters button {
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #e5e7eb;
            font-size: 14px;
            background: #fff;
        }

        .filters button {
            background: #388e3c;
            color: #fff;
            border: none;
            cursor: pointer;
        }

    .table-wrapper {
        background: #fff;
        border-radius: 14px;
        padding: 20px;
        box-shadow: 0 8px 24px rgba(0,0,0,.08);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

    th, td {
        padding: 12px 10px;
        border-bottom: 1px solid #eef2f7;
        text-align: left;
    }

    th {
        background: #f8fafc;
        color: #0f172a;
        font-weight: 600;
    }

    .badge {
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-purple {
        background: #e9d5ff;
        color: #4c1d95;
    }

    .badge-blue {
        background: #dbeafe;
        color: #1e40af;
    }

    .badge-green {
        background: #dcfce7;
        color: #166534;
    }

    .progress {
        background: #e5e7eb;
        border-radius: 10px;
        height: 8px;
        width: 160px;
        overflow: hidden;
        display: inline-block;
        vertical-align: middle;
        margin-right: 6px;
    }

        .progress > div {
            background: #16a34a;
            height: 100%;
        }

    .actions a {
        text-decoration: none;
        margin-right: 10px;
        font-size: 18px;
    }
</style>

<div class="page">
    <div class="page-header">
        <h2>Requisitos Normativos con Estado de Cumplimiento</h2>
        <p>Estado actual de cumplimiento y progreso de cada requisito normativo</p>
    </div>

    <div class="filters">
        <input type="text" placeholder="Buscar por número, título o descripción…" />
        <select><option>Todas las categorías</option></select>
        <select><option>Todas las prioridades</option></select>
        <button>Filtrar</button>
    </div>

    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Requisito</th>
                    <th>Categoría</th>
                    <th>Estado</th>
                    <th>Cumplimiento</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><span class="badge badge-purple">REQ-001</span></td>
                    <td>Ley Marco de Ciberseguridad (Ley Nº 21.663)</td>
                    <td><span class="badge badge-blue">Seguridad de Información</span></td>
                    <td><span class="badge badge-green">En cumplimiento</span></td>
                    <td>
                        <span class="progress"><div style="width:75%"></div></span>
                        <small>75% — 6 de 8 artículos</small>
                    </td>
                    <td class="actions">
                        <a title="Ver" href="@Url.Action("ReqView_Details", "Home")">👁️</a>
                        @if (canCrud)
                        {
                            <a title="Editar" href="#">✏️</a>
                            <a title="Eliminar" href="#">🗑️</a>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
