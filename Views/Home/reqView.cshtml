@{
    ViewData["Title"] = "Requisitos Normativos";
    ViewData["NoLayout"] = true;
}

<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: 'Inter', sans-serif;
        background: linear-gradient(to right, #d4fc79, #96e6a1);
        height: 100vh;
        display: flex;
    }

    /* Sidebar */
    .sidebar {
        width: 260px;
        background: #2ecc40; /* verde claro */
        color: white;
        display: flex;
        flex-direction: column;
        padding: 20px;
        justify-content: space-between;
        border-top-left-radius: 10px;
        border-bottom-left-radius: 10px;
        box-shadow: 3px 0 10px rgba(0, 0, 0, 0.2);
    }

        .sidebar .top {
            display: flex;
            flex-direction: column;
        }

        .sidebar h2 {
            margin: 0 0 5px;
            font-size: 22px;
        }

        .sidebar p {
            margin: 0 0 20px;
            font-size: 12px;
            opacity: 0.7;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            margin: 10px 0;
            padding: 10px 15px;
            border-radius: 8px;
            transition: 0.2s;
        }

            .sidebar a:hover {
                background-color: #2e7d32;
                transform: translateX(5px);
            }

        .sidebar hr {
            border-color: rgba(255,255,255,0.2);
            margin: 15px 0;
        }

    /* Botón cerrar sesión */
    .logout {
        background-color: #145214; /* verde oscuro */
        color: white;
        font-weight: bold;
        text-align: center;
        padding: 10px;
        border-radius: 8px;
        text-decoration: none;
        transition: 0.2s;
    }

        .logout:hover {
            background-color: #0f3e11; /* verde oscuro más intenso al hover */
            transform: scale(1.05);
        }

    /* Main content */
    .main-content {
        flex-grow: 1;
        background-color: #f4f6f9;
        padding: 40px;
        border-top-right-radius: 10px;
        border-bottom-right-radius: 10px;
        overflow-y: auto;
        box-shadow: inset 0 0 30px rgba(0, 0, 0, 0.05);
    }

    .header {
        text-align: center;
        margin-bottom: 30px;
    }

        .header h2 {
            color: #2e7d32;
            font-size: 28px;
        }

        .header p {
            color: #555;
            font-size: 14px;
        }

    .filters {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
        justify-content: center;
        flex-wrap: wrap;
    }

        .filters input,
        .filters select,
        .filters button {
            padding: 10px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        .filters button {
            background-color: #388e3c;
            color: white;
            border: none;
            cursor: pointer;
        }

            .filters button:hover {
                background-color: #2e7d32;
            }

    .table-wrapper {
        background-color: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

    th, td {
        padding: 14px 10px;
        text-align: left;
        border-bottom: 1px solid #eee;
    }

    th {
        background-color: #f8f8f8;
        font-weight: 600;
        color: #333;
    }

    .badge {
        padding: 5px 10px;
        border-radius: 50px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .badge-blue {
        background-color: #2196f3;
        color: white;
    }

    .badge-red {
        background-color: #f44336;
        color: white;
    }

    .badge-green {
        background-color: #4caf50;
        color: white;
    }

    .badge-yellow {
        background-color: #ffc107;
        color: black;
    }

    .badge-purple {
        background-color: #e1bee7;
        color: black;
    }

    .progress-bar {
        background-color: #e9ecef;
        border-radius: 10px;
        height: 8px;
        width: 100px;
        overflow: hidden;
        position: relative;
    }

    .progress-fill {
        background-color: #4caf50;
        height: 100%;
        border-radius: 10px;
        transition: width 0.4s ease;
    }

    .actions {
        display: flex;
        gap: 10px;
    }

        .actions button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 16px;
            transition: 0.2s;
        }

            .actions button:hover {
                transform: scale(1.2);
                color: #007bff;
            }
</style>

<!-- Layout -->
<div class="sidebar">
    <div class="top">
        <h2>ReqSaaS</h2>
        <p>Plataforma de Requisitos</p>

        <a href="#">📊 Dashboard</a>
        <a href="#">📋 Estado de requisito</a>        
        <a href="#">➕ Agregar requisito</a>

        <hr />

        <a href="#">🛠️ Editar evidencia</a>
        <a href="#">📄 Detalle de requisito</a>
        <a href="#">🧪 Evaluar requisito</a>
    </div>

    <a class="logout" href="/Home/Index">🚪 Cerrar sesión</a>
</div>

<div class="main-content">
    <div class="header">
        <h2>Requisitos Normativos con Estado de Cumplimiento</h2>
        <p>Estado actual de cumplimiento y progreso de cada requisito normativo en el sistema</p>
    </div>

    <div class="filters">
        <input type="text" placeholder="Buscar por número, título o descripción..." />
        <select>
            <option>Todas las categorías</option>
        </select>
        <select>
            <option>Todas las prioridades</option>
        </select>
        <button>Filtrar</button>
    </div>

    <div class="table-wrapper">
        <table>
            <thead>
                <tr>
                    <th>N°</th>
                    <th>Requisito</th>
                    <th>Categoría</th>
                    <th>Estado</th>
                    <th>Cumplimiento</th>                    
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><span class="badge badge-purple">REQ-001</span></td>
                    <td>Ley Marco de Ciberseguridad (Ley Nº 21.663)</td>
                    <td><span class="badge badge-blue">Seguridad de Información</span></td>
                    <td><span class="badge badge-green">En cumplimiento</span></td>
                    <td><span style="color: orange; font-weight: 600;">75%</span></td>
                    <td>
                        <div class="progress-bar">
                            <div class="progress-fill" style="width: 75%;"></div>
                        </div>
                        <small
                            >6 de 8 artículos</small>
                    </td>
                    <td class="actions">
                        <form method="post" asp-action="ReqView_Details" asp-controller="Home">
                            <button onclick="location.href='@Url.Action("ReqView_Details", "Home")'" title="Ver detalle">👁️</button>
                        </form>                       
                    </td>
                </tr>

                <!-- Puedes agregar más filas dinámicamente aquí -->
            </tbody>
        </table>
    </div>
</div>
